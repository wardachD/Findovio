<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Findovio.MainPage"
             Shell.NavBarIsVisible="False"
             xmlns:viewModels="clr-namespace:Findovio.ViewModels;assembly=Findovio">

    <ContentPage.BindingContext>
        <viewModels:MainPageViewModel />
    </ContentPage.BindingContext>
    
    <StackLayout Orientation="Vertical"
                 BackgroundColor="White">
        <Grid HeightRequest="130">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
        </Grid>
        <Grid HeightRequest="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image Source="findovio.png" Aspect="AspectFit" Margin="90"/>
        </Grid>
        <StackLayout HeightRequest="100" VerticalOptions="EndAndExpand">
            <Button Text="Rozpocznij" 
                    HeightRequest="65"
                    WidthRequest="180"
                    BackgroundColor="Black"
                    BorderColor="Black"
                    FontAttributes="Bold"
                    TextColor="White"
                    Opacity="0.9"
                    Command="{Binding GoToNextScreenCommand}"/>
        </StackLayout>
    </StackLayout>
    
</ContentPage>
