<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Findovio.MainPage"
             Shell.NavBarIsVisible="False"
             xmlns:viewmodels="clr-namespace:Findovio.ViewModels;assembly=Findovio">

    <StackLayout Orientation="Vertical">
        <Grid HeightRequest="80%">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image Source="logo.png2" Aspect="AspectFit" />
        </Grid>
        <StackLayout HeightRequest="20" VerticalOptions="EndAndExpand">
            <Button Text="Kliknij mnie" Command="{Binding ButtonClickedCommand}" />
        </StackLayout>
    </StackLayout>
    
</ContentPage>
